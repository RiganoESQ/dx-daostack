# Allow to use native solc docker image
#   - Requires to have the image:
#       docker pull ethereum/solc:0.4.25
SOLC_USE_DOCKER=false

# Time Zone
TIME_ZONE='Asia/Tel_Aviv'

# Mnemonic or MNEMONIC
#MNEMONIC='your mnemonic here'
#PK='your-private-key'
# MNEMONIC=$AL_MN
# PK=$AL_PK

# Basic DAO Data
TOKEN_NAME=DutchX
TOKEN_SYMBOL=DUX
TOKENS_CAP=0
ORGANIZATION_NAME=DutchX
FOUNDERS_INITIAL_TOKENS=100
FOUNDERS_INITIAL_REP=200

# Periods
## Initial distribution (Feb 18 - Mar 20):
INITIAL_DISTRIBUTION_START='2019-02-04 00:00'
INITIAL_DISTRIBUTION_END='2019-02-09 00:00'

## Claiming period for REP for Locked MGN (Mar 20)
CLAIMING_MGN_START='2019-02-08 00:00'
CLAIMING_MGN_END='2019-02-09 00:00'
#REDEEM_MGN_START='2019-03-21 12:00'

## Redeem period (Mar 20)
REDEEM_START='2019-02-09 00:00'

## Governance period start (Apr 4):
GOVERNANCE_START='2019-02-10 00:00'

# Cryptocompare
# Only needed if use the script get-token-prices
CRYPTO_COMPARE_API_KEY=your-api-key-here

# Use Fixed price oracle
#   true: Uses the fixed price oracle
#   false (default): Uses the DutchX price oracle (DutchXPriceOracle)
USE_FIXED_PRICE_ORACLE=true

# Use ExternalTokenLockerMock instead of MGN
USE_MOCK_MGN=true

# Use Wallet.sol instead of DutchX
USE_MOCK_DX=true

# Use dx-contracts from networks-dev.json as opposed to networks.json
USE_DEV_CONTRACTS=true

USING_ENV='bounty.31.01.2019.env'

# Scheme parameters
NUMBERS_OF_GEN_AUCTIONS = 10

# 3days in seconds
BOOSTED_VOTE_PERIOD_LIMIT = 259200

# 12 hours in seconds
PRE_BOOSTED_VOTE_PERIOD_LIMIT = 43200

# 6 days in seconds
QUEUED_VOTE_PERIOD_LIMIT = 518400

# 6 hours in seconds
QUIET_ENDING_PERIOD = 21600

# one month (30 day) in seconds
MAX_LOCKING_PERIOD = 2592000